<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SCBSectionFragment">

    <GridLayout
        android:id="@+id/gdViewOfProfessional"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:layout_weight="8"
        android:padding="14dp"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="1"
        android:rowOrderPreserved="true"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="10dp">

        <!--row 1-->
        <!--col 1-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#4c97e7"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/firstProfessionalCard"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_row="0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Professional"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--col 2-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#4c97e7"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:id="@+id/secondProfessionalCard"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Second Professional"
                    android:textSize="18dp"
                    android:textAlignment="center" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--row 2-->
        <!--col 1-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#4c97e7"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/thirdProfessionalPartOneCard"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Third Professional Part 1"
                    android:textSize="18dp"
                    android:textAlignment="center" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--col 2-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#4c97e7"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/thirdProfessionalPartTwoCard"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Third Professional Part 2"
                    android:textSize="18dp"
                    android:textAlignment="center" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>