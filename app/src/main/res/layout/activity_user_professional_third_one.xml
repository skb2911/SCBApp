<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfessionalThirdOneActivity">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subjects"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAppearance="@style/Theme.AppCompat"
        android:id="@+id/headingSubjects" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewOfSubjects"
        android:layout_below="@id/headingSubjects">

        <GridLayout
            android:id="@+id/gdView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headingSubjects"
            android:layout_marginTop="10dp"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="4"
            android:rowOrderPreserved="true">

            <android.support.v7.widget.CardView
                android:id="@+id/spmCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:clickable="true"
                app:cardBackgroundColor="#4c97e7"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/spm">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="SPM"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/entCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:clickable="true"
                app:cardBackgroundColor="#4c97e7"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/ent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ENT"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/opthaCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:clickable="true"
                app:cardBackgroundColor="#4c97e7"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/optha">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Optha"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/thirdProfessionalPartOneMockTestCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:clickable="true"
                app:cardBackgroundColor="#4c97e7"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/mock_test">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>

    </ScrollView>

</RelativeLayout>